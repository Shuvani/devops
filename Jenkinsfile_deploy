properties([pipelineTriggers([githubPush()])])

pipeline {
    environment {
        registry = "shuvani/moscow_time"
        registryCredential = 'DockerHub'
    }
    agent any
    stages {
        stage('Deploy') {
            when {
                tag '*.*.*'
            }
            steps {
                script {
                    dockerImage = docker.build(registry + ${TAG_NAME}, "./app_python")
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}